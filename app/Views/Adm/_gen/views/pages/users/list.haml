.list

  %h1 {{e. Usuarios}}
  %a{:href=>"{{*users_add}}"}
    {{e. AÃ±adir usuario}}

  .card
    .p40

      {{$messages or}}

      %table#items_list.table.table-striped.table-bordered.dataTable.no-footer{:cellspacing=>"0"}
        %thead
          %tr
            %th {{e. Id}}
            %th {{e. Nombre}}
            %th {{e. Acciones}}
        %tbody
          {{foreach $users as $user}}
          %tr{:id=>"item{{$user->id}}"}
            %td {{$user->id}}
            %td {{$user->name}}
            %td
              .btn-group
                %a.btn.btn-primary.btn-raised.btn-xs{:href=>"{{*users_edit:id|$user->id}}"}
                  %i.fa.fa-pencil
                %a.btn.btn-warning.btn-raised.btn-xs.showdelete{:href=>"{{*users_delete:id|$user->id}}"}
                  %i.fa.fa-trash
          {{endforeach}}

