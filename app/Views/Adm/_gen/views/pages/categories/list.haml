.list

  %h1 {{e. Category}}
  %a{:href=>"{{*categories_add}}"}
    {{e. AÃ±adir Category }}

  .card
    .p40

      {{$messages or}}

      %table#items_list.table.table-striped.table-bordered.dataTable.no-footer{:cellspacing=>"0"}
        %thead
          %tr
            %th {{e. Id}}
            %th {{e. Item}}
            %th {{e. Acciones}}
        %tbody
          {{foreach $categories as $category}}
          %tr{:id=>"item{{$category->id}}"}
            %td {{$category->id}}
            %td {{$category->name}}
            %td
              .btn-group
                %a.btn.btn-primary.btn-raised.btn-xs{:href=>"{{*categories_edit:id|$category->id}}"}
                  %i.fa.fa-pencil
                %a.btn.btn-warning.btn-raised.btn-xs.showdelete{:href=>"{{*categories_delete:id|$category->id}}"}
                  %i.fa.fa-trash
          {{endforeach}}

