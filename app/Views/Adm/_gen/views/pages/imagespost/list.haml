.list

  %h1 {{e. ImagePost}}
  %a{:href=>"{{*imagespost_add}}"}
    {{e. AÃ±adir ImagePost }}

  .card
    .p40

      {{$messages or}}

      %table#items_list.table.table-striped.table-bordered.dataTable.no-footer{:cellspacing=>"0"}
        %thead
          %tr
            %th {{e. Id}}
            %th {{e. Item}}
            %th {{e. Acciones}}
        %tbody
          {{foreach $imagespost as $imagepost}}
          %tr{:id=>"item{{$imagepost->id}}"}
            %td {{$imagepost->id}}
            %td {{$imagepost->rol}}
            %td
              .btn-group
                %a.btn.btn-primary.btn-raised.btn-xs{:href=>"{{*imagespost_edit:id|$imagepost->id}}"}
                  %i.fa.fa-pencil
                %a.btn.btn-warning.btn-raised.btn-xs.showdelete{:href=>"{{*imagespost_delete:id|$imagepost->id}}"}
                  %i.fa.fa-trash
          {{endforeach}}

